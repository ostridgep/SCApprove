<core:View
	controllerName="view.OperationItem"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		title=" Operation Details"
		showNavButton="true"
		navButtonPress="handleNavBack"
		class="sapUiFioriObjectPage">
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="Create Time Confirmation2"
						icon="sap-icon://create-entry-time"
						press="handleCreateTimeConfirmation" />
					<Button
						text="Status Update"
						icon="sap-icon://flag"
						press="handleUpdateStatus" />
				</contentRight>
			</Bar>
		</footer>
		<content>
			<ObjectHeader
				title="3000500/{opno}"
				number="21/03/2013"
				numberUnit="17:00" >
				<attributes>
					<ObjectAttribute
						text="{shorttext}" />
				</attributes>
			</ObjectHeader>
			<form:SimpleForm
				id="form"
				minWidth="1024"
				maxContainerCols="2" >
				<core:Title text="Delivery on" />
					<Label text="Plantxx"/>
					<Text text="SAP AG"/>
					<Label text="Street"/>
					<Text text="Dietmar-Hopp-Allee"/>
					<Label text="City"/>
					<Text text="Walldorf"/>
					<Label text="Country"/>
					<Text text="Germany"/>
			</form:SimpleForm>
			<Panel
				headerText="Time Confirmations">
			</Panel>

		</content>
	</Page>
</core:View>